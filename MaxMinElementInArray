#include <iostream>
using namespace std;

// get max and min from the array...

int getMax(int arr[],int n)
{
    int Max=0;
    for(int i=0;i<n;i++)
    {
        if(arr[i]>Max)
        {
            Max = arr[i];
        }
        
    }
    return Max;
}

int getMin(int arr[], int n)
{
    int Min=9999;
    for(int i=0;i<n;i++)
    {
        if(arr[i]<Min)
        {
            Min=arr[i];
        }
    }
    return Min;
}

int main()
{
    int arr[] = {22, 14, 8, 17, 35, 3};
    cout<<"Maximum element from array is "<<getMax(arr,6)<<endl<<endl;
    cout<<"Minimum element from array is "<<getMin(arr,6);
    

}
